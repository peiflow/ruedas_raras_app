<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:orientation="vertical"
        tools:context=".EventDetails"
        android:fillViewport="true"
        android:background="@color/cardview_dark_background">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:layout_margin="10dp">
        <!--<LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal" android:layout_marginBottom="15dp">
            <TextView style="@style/LabelStyle"
                      android:layout_width="90dp" android:layout_height="wrap_content"
                      android:text="@string/event_details_name"
                      android:id="@+id/textView2"/>
            <TextView style="@style/ContentTextStyle"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/EventTxt"
                      app:layout_constraintTop_toTopOf="parent"/>
        </LinearLayout>-->
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal" android:layout_marginBottom="15dp">
            <!--<TextView style="@style/LabelStyle"
                      android:layout_width="90dp" android:layout_height="wrap_content"
                      android:text="@string/event_details_description"
                      android:id="@+id/textView3"/>-->
            <TextView style="@style/ContentTextStyle"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/desc_text"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal" android:layout_marginBottom="15dp">
            <!--<TextView style="@style/LabelStyle"
                      android:layout_width="90dp" android:layout_height="wrap_content"
                      android:text="@string/event_details_date"
                      android:id="@+id/date_label"/>-->
            <TextView style="@style/ContentTextStyle"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/date_text"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal" android:layout_marginBottom="15dp">
<!--            <TextView style="@style/LabelStyle"
                      android:layout_width="90dp"
                      android:layout_height="wrap_content"
                      android:text="@string/event_details_time"
                      android:id="@+id/time_label"/>-->
            <TextView style="@style/ContentTextStyle"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/time_text"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal" android:layout_marginBottom="15dp">
<!--            <TextView style="@style/LabelStyle"
                      android:layout_width="90dp" android:layout_height="wrap_content"
                      android:text="@string/event_details_location"
                      android:id="@+id/address_label"
                      android:layout_gravity="center_vertical"/>-->
            <TextView style="@style/ContentTextStyle"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:id="@+id/address_text"/>
        </LinearLayout>

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="300dp"
                  android:id="@+id/mapFragment1"
                  tools:context=".EventLocationActivity"
                  android:name="com.google.android.gms.maps.SupportMapFragment"
                  class="com.google.android.gms.maps.SupportMapFragment"/>

        <Button
                android:layout_marginTop="10dp"
                android:id="@+id/open_maps_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/open_maps_button"
                android:background="@color/secondaryDarkColor"
                android:padding="5dp"/>
    </LinearLayout>
</ScrollView>