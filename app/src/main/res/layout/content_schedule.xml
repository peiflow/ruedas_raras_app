<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/schedule_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_schedule"
        tools:context=".Schedule">
    <ToggleButton android:id="@+id/tabBtn1"
                  android:text="@string/tab1"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintEnd_toStartOf="@+id/tabBtn2"
                  android:background="@color/secondaryDarkColor"
                  android:textColor="@color/primaryLightColor" android:textSize="18sp" android:textOff="@string/tab1"
                  android:textOn="@string/tab1"/>
    <ToggleButton android:id="@+id/tabBtn2"
                  android:text="@string/tab2"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toEndOf="@+id/tabBtn1"
                  app:layout_constraintEnd_toStartOf="@+id/tabBtn3"
                  android:background="@color/secondaryDarkColor"
                  android:textColor="@color/primaryLightColor" android:textSize="18sp" android:textOff="@string/tab2"
                  android:textOn="@string/tab2"/>
    <ToggleButton android:id="@+id/tabBtn3"
                  android:text="@string/tab3"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toEndOf="@+id/tabBtn2"
                  app:layout_constraintTop_toTopOf="parent"
                  android:background="@color/secondaryDarkColor"
                  android:textColor="@color/primaryLightColor" android:textSize="18sp" android:textOff="@string/tab3"
                  android:textOn="@string/tab3"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline2" app:layout_constraintGuide_begin="54dp"
                                          android:orientation="horizontal"
                                          app:layout_constraintStart_toStartOf="parent"
                                          app:layout_constraintEnd_toEndOf="parent"
                                          app:layout_constraintTop_toTopOf="parent"
                                          app:layout_constraintBottom_toBottomOf="parent"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/schedule_rv_events"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@+id/guideline2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent">
    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>